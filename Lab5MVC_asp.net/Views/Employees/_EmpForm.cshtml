@model Lab5MVC_asp.net.Models.EmployeeDTO_MVC
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName)
                @Html.ValidationMessageFor(m => m.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DepartmentCode,
                         new SelectList(Model.Department, "ID", "DepartmentName"),
                         new { @Style = "width:100%;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SpecialtyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SpecialtyCode,
                         new SelectList(Model.Specialty, "ID", "SpecialtyName"),
                         new { @Style = "width:100%;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.ButtonTitle" class="btn btn-default" />
            </div>
        </div>
    </div>
}